<Page x:Class="UnoSvgTest.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoSvgTest"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      Background="{ThemeResource BackgroundBrush}">
  <StackPanel utu:SafeArea.Insets="VisibleBounds"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="8">       
    <TextBlock AutomationProperties.AutomationId="HelloTextBlock"
          Text="Hello Uno Platform"
          HorizontalAlignment="Center" />
      <Image Source="Assets/Icons/icon_plus.png" Width="50" Height="50" />
      <Image Source="Assets/Icons/icon_plus.png" Width="100" Height="100" />
  </StackPanel>
</Page>
